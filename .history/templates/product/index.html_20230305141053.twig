{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique Fran√ßaise{% endblock %}

{% block content %}
    <h1>Nos produits</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="product-item">
                    <img src="/uploads/{{ product.illustration }}" alt="">
                    <h5>{{ product.name }}</h5>
                    <span>{{ product.subtitle }}</span>
                    {{ product.price }}
                </div>
            </div>
        {% endfor %}
    </div>
    
{% endblock %}
